# API Keys
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4-fast
# XAI_API_BASE_URL=https://api.x.ai/v1
RESEND_API_KEY=your_resend_api_key_here

# Twitter/X Authentication (required for tweet scraping via twikit)
# Use your actual Twitter account credentials
# Rate limits: 50 search requests per 15 minutes
TWITTER_USERNAME=your_twitter_username
TWITTER_EMAIL=your_twitter_email@example.com
TWITTER_PASSWORD=your_twitter_password

# Reddit API Authentication (required for Reddit sentiment analysis)
# Create app at: https://www.reddit.com/prefs/apps
# Choose "script" type app
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=VibeList Stock Sentiment Bot v1.0

# Sentiment source: grok | vader | auto
# - grok: xAI Grok live search
# - vader: twikit + VADER sentiment analysis
# - auto: prefer twikit+VADER, fallback to Grok if insufficient tweets
SENTIMENT_SOURCE=grok

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=your_email@example.com

# Portfolio Configuration
PORTFOLIO_CONFIG_PATH=config.json

# Logging
LOG_LEVEL=INFO
